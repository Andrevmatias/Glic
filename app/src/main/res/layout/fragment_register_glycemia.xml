<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_register_glycemia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="br.tcc.glic.fragments.RegisterGlycemiaFragment"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_glycemia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="50sp"
        android:drawableLeft="@drawable/ic_glycemia"
        android:drawablePadding="5dp"/>

    <FrameLayout
        android:id="@+id/container_date_time_glycemia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
